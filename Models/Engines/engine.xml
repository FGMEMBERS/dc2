<?xml version="1.0"?>

<PropertyList>

  <path>R1820.ac</path>

  <animation>
    <object-name>r1820</object-name>
  </animation>

  <model>
    <path>Aircraft/dc2/Models/Engines/prop.ac</path>
    <offsets>
      <x-m>-0.5 </x-m>
      <y-m> 0.0 </y-m>
      <z-m> 0.0 </z-m>
    </offsets>
  </model>

  <!-- Les hélices --> 
  <animation>
    <name>HeliceCompleteGI</name>
    <object-name>propdiscGI</object-name>
    <object-name>propblurGI</object-name>
    <object-name>heliceGI</object-name>
    <object-name>bolGI</object-name>
  </animation>

  <!-- Séléction de l'objet visible en fonction des rpm -->
  <animation>
    <type>select</type>
    <object-name>propdiscGI</object-name>
    <condition>
      <greater-than>
        <property>/engines/engine[0]/rpm</property>
        <value>1100</value>
      </greater-than>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>propblurGI</object-name>
    <condition>
    <and>
      <greater-than>
        <property>/engines/engine[0]/rpm</property>
        <value>500.000</value>
      </greater-than>
      <less-than>
        <property>/engines/engine[0]/rpm</property>
        <value>1100.001</value>
      </less-than>
    </and>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>heliceGI</object-name>
    <condition>
      <less-than>
        <property>/engines/engine[0]/rpm</property>
        <value>1100</value>
      </less-than>
    </condition>
  </animation>

  <animation>
    <type>spin</type>
    <object-name>HeliceCompleteGI</object-name>
    <property>/engines/engine[0]/rpm</property>
    <factor> 1 </factor>
    <center>
      <x-m> 0.0 </x-m>
      <y-m> 0.0 </y-m>
      <z-m> 0.0 </z-m>
    </center>
    <axis>
      <x> -1.000 </x>
      <y>  0.000 </y>
      <z>  0.000 </z>
    </axis>
  </animation>


</PropertyList>
